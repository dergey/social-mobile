<resources>
    <!-- Base application theme. -->
    <style name="Theme.Social" parent="Theme.AppCompat.Light.NoActionBar">
<!--        &lt;!&ndash; Windows background color. &ndash;&gt;-->
<!--        <item name="android:background">@color/black</item>-->
<!--        <item name="android:colorBackground">@color/black</item>-->
<!--        <item name="android:windowBackground">@color/black</item>-->
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#E1E1E1</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Text color. -->
        <item name="textColorPrimary">@color/black</item>
        <item name="textColorSecond">@color/dark_gray</item>
        <item name="textColorBackground">@color/gray</item>

        <!-- Customize your theme here. -->
        <item name="backgroundErrorLayoutColor">@color/error</item>
        <item name="textErrorLayoutColor">@color/white</item>
        <item name="linkTextViewColor">@color/link_color</item>
        <item name="headerTextViewColor">@color/header_color</item>
        <item name="hintTextViewColor">@color/hint_color</item>
        <item name="borderEditTextColor">@color/border_color</item>
        <item name="borderFocusedEditTextColor">@color/focused_border_color</item>
        <item name="buttonTextColor">@color/button_text_color</item>
        <item name="backgroundButtonColor">@color/active_button_color</item>
        <item name="backgroundDisableButtonColor">@color/disable_button_color</item>
        <item name="backgroundPressedButtonColor">@color/pressed_active_button_color</item>
    </style>

    <style name="Chats" parent="@android:style/TextAppearance.Material">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?attr/textColorPrimary</item>
    </style>
    <style name="Chats.Time">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="Chats.Header">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Chats.Body">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="Chats.Counter">
        <item name="android:textColor">?attr/textColorSecond</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Messages" parent="@android:style/TextAppearance.Material">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?attr/textColorPrimary</item>
    </style>
    <style name="Messages.Time">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?attr/textColorBackground</item>
    </style>
    <style name="Messages.Time.Contrast">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?attr/textColorPrimary</item>
    </style>
    <style name="Messages.Body">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextLabel" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textSize">18sp</item>
    </style>

</resources>